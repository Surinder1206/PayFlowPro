@page "/employees/{EmployeeId:int}"
@using Microsoft.EntityFrameworkCore
@using PayFlowPro.Data.Context
@using PayFlowPro.Models.Entities
@inject IDbContextFactory<ApplicationDbContext> DbContextFactory
@inject NavigationManager Navigation
@attribute [Authorize(Roles = "Admin,HR,Manager")]

@* Page Title set via layout *@

@if (isLoading)
{
    <div class="text-center py-5">
        <div class="spinner-border" role="status">
            <span class="sr-only">Loading...</span>
        </div>
        <p class="mt-2">Loading employee details...</p>
    </div>
}
else if (employee == null)
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <div class="alert alert-warning">
                    <h4 class="alert-heading">Employee Not Found</h4>
                    <p>The employee with ID @EmployeeId was not found.</p>
                    <hr>
                    <a href="/employees" class="btn btn-primary">
                        <i class="fas fa-arrow-left"></i> Back to Employee List
                    </a>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-12">
                <!-- Header -->
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <div class="d-flex align-items-center">
                        <a href="/employees" class="btn btn-outline-secondary me-3">
                            <i class="fas fa-arrow-left"></i> Back
                        </a>
                        <div>
                            <h2 class="mb-1">@employee.FirstName @employee.LastName</h2>
                            <p class="text-muted mb-0">
                                <span class="badge badge-secondary">@employee.EmployeeCode</span>
                                <span class="badge @GetStatusBadgeClass(employee.Status) ms-2">@employee.Status</span>
                            </p>
                        </div>
                    </div>
                    <div>
                        <AuthorizeView Roles="Admin,HR">
                            <Authorized>
                                <a href="/employees/@employee.Id/edit" class="btn btn-warning me-2">
                                    <i class="fas fa-edit"></i> Edit Employee
                                </a>
                                <a href="/employees/@employee.Id/payslips" class="btn btn-info">
                                    <i class="fas fa-receipt"></i> View Payslips
                                </a>
                            </Authorized>
                        </AuthorizeView>
                    </div>
                </div>

                <div class="row">
                    <!-- Profile Card -->
                    <div class="col-md-4 mb-4">
                        <div class="card h-100">
                            <div class="card-body text-center">
                                @if (!string.IsNullOrEmpty(employee.ProfileImageUrl))
                                {
                                    <img src="@employee.ProfileImageUrl" alt="Profile" class="rounded-circle mb-3" style="width: 120px; height: 120px; object-fit: cover;" />
                                }
                                else
                                {
                                    <div class="rounded-circle bg-secondary d-flex align-items-center justify-content-center mx-auto mb-3" style="width: 120px; height: 120px;">
                                        <i class="fas fa-user fa-3x text-white"></i>
                                    </div>
                                }

                                <h4>@employee.FirstName @employee.LastName</h4>
                                <p class="text-muted">@employee.JobTitle</p>
                                <p class="text-muted">@(employee.Department?.Name ?? "No Department")</p>

                                <div class="mt-3">
                                    <div class="row">
                                        <div class="col-6 text-center border-end">
                                            <h6 class="mb-0"><CurrencyDisplay Amount="employee.BasicSalary" /></h6>
                                            <small class="text-muted">Basic Salary</small>
                                        </div>
                                        <div class="col-6 text-center">
                                            <h6 class="mb-0">@((DateTime.Now - employee.DateOfJoining).Days / 365) yrs</h6>
                                            <small class="text-muted">Experience</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Personal Information -->
                    <div class="col-md-8 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-user"></i> Personal Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-md-6 mb-3">
                                        <label class="font-weight-bold">First Name:</label>
                                        <p>@employee.FirstName</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="font-weight-bold">Last Name:</label>
                                        <p>@employee.LastName</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="font-weight-bold">Email:</label>
                                        <p><a href="mailto:@employee.Email">@employee.Email</a></p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="font-weight-bold">Phone:</label>
                                        <p>@employee.PhoneNumber</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="font-weight-bold">Date of Birth:</label>
                                        <p>@(employee.DateOfBirth == DateTime.MinValue ? "Not specified" : employee.DateOfBirth.ToString("dd MMM yyyy"))</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="font-weight-bold">Gender:</label>
                                        <p>@employee.Gender</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="font-weight-bold">Marital Status:</label>
                                        <p>@employee.MaritalStatus</p>
                                    </div>
                                    <div class="col-md-6 mb-3">
                                        <label class="font-weight-bold">National ID:</label>
                                        <p>@employee.NationalId</p>
                                    </div>
                                    <div class="col-md-12 mb-3">
                                        <label class="font-weight-bold">Address:</label>
                                        <p>@employee.Address</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row">
                    <!-- Employment Information -->
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-briefcase"></i> Employment Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Employee Code:</label>
                                        <p><span class="badge badge-secondary">@employee.EmployeeCode</span></p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Job Title:</label>
                                        <p>@employee.JobTitle</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Department:</label>
                                        <p>@(employee.Department?.Name ?? "No Department")</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Company:</label>
                                        <p>@(employee.Company?.Name ?? "No Company")</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Date of Joining:</label>
                                        <p>@employee.DateOfJoining.ToString("dd MMM yyyy")</p>
                                    </div>
                                    @if (employee.DateOfLeaving.HasValue)
                                    {
                                        <div class="col-12 mb-3">
                                            <label class="font-weight-bold">Date of Leaving:</label>
                                            <p>@employee.DateOfLeaving.Value.ToString("dd MMM yyyy")</p>
                                        </div>
                                    }
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Employment Status:</label>
                                        <p><span class="badge @GetStatusBadgeClass(employee.Status)">@employee.Status</span></p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Financial Information -->
                    <div class="col-md-6 mb-4">
                        <div class="card h-100">
                            <div class="card-header">
                                <h5 class="mb-0"><i class="fas fa-dollar-sign"></i> Financial Information</h5>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Basic Salary:</label>
                                        <p class="h5 text-success"><CurrencyDisplay Amount="employee.BasicSalary" /></p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Bank Name:</label>
                                        <p>@employee.BankName</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Bank Account:</label>
                                        <p>@employee.BankAccountNumber</p>
                                    </div>
                                    <div class="col-12 mb-3">
                                        <label class="font-weight-bold">Tax ID:</label>
                                        <p>@employee.TaxId</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Recent Payslips -->
                <div class="row">
                    <div class="col-md-12">
                        <div class="card">
                            <div class="card-header">
                                <div class="d-flex justify-content-between align-items-center">
                                    <h5 class="mb-0"><i class="fas fa-receipt"></i> Recent Payslips</h5>
                                    <AuthorizeView Roles="Admin,HR">
                                        <Authorized>
                                            <a href="/employees/@employee.Id/payslips" class="btn btn-sm btn-info">
                                                <i class="fas fa-eye"></i> View All Payslips
                                            </a>
                                        </Authorized>
                                    </AuthorizeView>
                                </div>
                            </div>
                            <div class="card-body">
                                @if (recentPayslips.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-sm">
                                            <thead>
                                                <tr>
                                                    <th>Month/Year</th>
                                                    <th>Gross Pay</th>
                                                    <th>Net Pay</th>
                                                    <th>Status</th>
                                                    <th>Actions</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var payslip in recentPayslips)
                                                {
                                                    <tr>
                                                        <td>@payslip.PayPeriodStart.ToString("MMM yyyy")</td>
                                                        <td>@payslip.GrossSalary.ToString("C")</td>
                                                        <td>@payslip.NetSalary.ToString("C")</td>
                                                        <td>
                                                            <span class="badge badge-success">@payslip.Status</span>
                                                        </td>
                                                        <td>
                                                            <a href="/payslips/@payslip.Id" class="btn btn-sm btn-outline-info">
                                                                <i class="fas fa-eye"></i> View
                                                            </a>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <div class="text-center py-3">
                                        <i class="fas fa-receipt fa-2x text-muted mb-2"></i>
                                        <p class="text-muted">No payslips generated yet.</p>
                                        <AuthorizeView Roles="Admin,HR">
                                            <Authorized>
                                                <a href="/payslips/generate?employeeId=@employee.Id" class="btn btn-primary btn-sm">
                                                    <i class="fas fa-plus"></i> Generate First Payslip
                                                </a>
                                            </Authorized>
                                        </AuthorizeView>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter] public int EmployeeId { get; set; }

    private Employee? employee;
    private List<Payslip> recentPayslips = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        await LoadEmployeeData();
    }

    private async Task LoadEmployeeData()
    {
        try
        {
            isLoading = true;

            using var dbContext = await DbContextFactory.CreateDbContextAsync();

            employee = await dbContext.Employees
                .Include(e => e.Department)
                .Include(e => e.Company)
                .Include(e => e.User)
                .FirstOrDefaultAsync(e => e.Id == EmployeeId);

            if (employee != null)
            {
                recentPayslips = await dbContext.Payslips
                    .Where(p => p.EmployeeId == EmployeeId)
                    .OrderByDescending(p => p.PayPeriodStart)
                    .Take(5)
                    .ToListAsync();
            }
        }
        catch (Exception ex)
        {
            // Log error
            Console.WriteLine($"Error loading employee data: {ex.Message}");
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetStatusBadgeClass(EmploymentStatus status)
    {
        return status switch
        {
            EmploymentStatus.Active => "badge-success",
            EmploymentStatus.Inactive => "badge-secondary",
            EmploymentStatus.OnLeave => "badge-warning",
            EmploymentStatus.Terminated => "badge-danger",
            _ => "badge-secondary"
        };
    }
}