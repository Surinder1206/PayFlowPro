@using PayFlowPro.Shared.DTOs.Dashboard
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<div class="hr-dashboard">
    <!-- HR Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-info">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="alert-heading mb-1">
                            <i class="fas fa-users me-2"></i>Human Resources Dashboard
                        </h4>
                        <p class="mb-0">Welcome back, <strong>@Data.UserName</strong> - Workforce Management & Payroll Operations</p>
                        <small class="text-muted">Last login: @Data.LastLoginAt.ToString("MMM dd, yyyy 'at' HH:mm")</small>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-info fs-6">@Data.Role</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Workforce Metrics -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-gradient-primary text-black h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-black-75 small">Total Staff</div>
                            <h2 class="mb-0">@Data.TotalEmployees</h2>
                            <div class="small">
                                <span class="text-success">@Data.ActiveEmployees active</span>
                            </div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-users fa-2x text-black-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-gradient-success text-black h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-black-75 small">New Hires</div>
                            <h2 class="mb-0">@Data.NewHiresThisMonth</h2>
                            <div class="small">
                                <span class="text-black-75">This month</span>
                            </div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-user-plus fa-2x text-black-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-gradient-warning text-black h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-black-75 small">Pending Approvals</div>
                            <h2 class="mb-0">@Data.PendingPayslipApprovals</h2>
                            <div class="small">
                                <span class="text-black-75">Payslips</span>
                            </div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-clock fa-2x text-black-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-gradient-info text-black h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-black-75 small">Monthly Payroll</div>
                            <h2 class="mb-0">@Data.TotalPayrollThisMonth.ToString("C0")</h2>
                            <div class="small">
                                <span class="text-black-75">Avg: @Data.AverageSalary.ToString("C0")</span>
                            </div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x text-black-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- HR Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-tasks me-2"></i>HR Management Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-lg-2 col-md-4 col-6">
                            <button class="btn btn-outline-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3" @onclick="ShowAddEmployeeModal">
                                <i class="fas fa-user-plus fa-2x mb-2"></i>
                                <span>Add Employee</span>
                            </button>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <button class="btn btn-outline-success w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3" @onclick="ShowGeneratePayslipModal">
                                <i class="fas fa-file-invoice-dollar fa-2x mb-2"></i>
                                <span>Generate Payslip</span>
                            </button>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <a href="/employees" class="btn btn-outline-info w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-users fa-2x mb-2"></i>
                                <span>Manage Employees</span>
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <a href="/departments" class="btn btn-outline-warning w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-building fa-2x mb-2"></i>
                                <span>Departments</span>
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <a href="/payslips" class="btn btn-outline-secondary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-receipt fa-2x mb-2"></i>
                                <span>All Payslips</span>
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <a href="/reports" class="btn btn-outline-dark w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-chart-bar fa-2x mb-2"></i>
                                <span>HR Reports</span>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Department Overview and Tasks -->
    <div class="row mb-4">
        <!-- Department Summaries -->
        <div class="col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-building me-2"></i>Department Overview
                    </h6>
                </div>
                <div class="card-body">
                    @if (Data.DepartmentSummaries.Any())
                    {
                        <div class="row">
                            @foreach (var dept in Data.DepartmentSummaries)
                            {
                                <div class="col-lg-6 mb-3">
                                    <div class="border rounded p-3 h-100">
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <h6 class="mb-0">@dept.DepartmentName</h6>
                                            <span class="badge bg-primary">@dept.EmployeeCount</span>
                                        </div>
                                        <p class="text-muted small mb-2">Manager: @dept.ManagerName</p>
                                        <div class="d-flex justify-content-between">
                                            <small class="text-muted">Monthly Payroll:</small>
                                            <small class="fw-bold">@dept.TotalPayroll.ToString("C0")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-building fa-2x mb-2"></i>
                            <p>No departments found</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Upcoming Tasks -->
        <div class="col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-calendar-check me-2"></i>Upcoming Tasks
                    </h6>
                </div>
                <div class="card-body">
                    @if (Data.UpcomingTasks.Any())
                    {
                        <div class="list-group list-group-flush">
                            @foreach (var task in Data.UpcomingTasks.Take(6))
                            {
                                <div class="list-group-item px-0 border-0">
                                    <div class="d-flex justify-content-between align-items-start">
                                        <div class="flex-grow-1">
                                            <h6 class="mb-1 small">@task.Task</h6>
                                            <small class="text-muted">@task.Category</small>
                                        </div>
                                        <div class="text-end">
                                            <span class="badge bg-@GetPriorityColor(task.Priority) mb-1">@task.Priority</span>
                                            <div class="small text-muted">@task.DueDate.ToString("MMM dd")</div>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-tasks fa-2x mb-2"></i>
                            <p>No upcoming tasks</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Payslip Status Distribution -->
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Payslip Status Distribution
                    </h6>
                </div>
                <div class="card-body">
                    @if (Data.PayslipStatuses.Any())
                    {
                        <div class="row text-center">
                            @foreach (var status in Data.PayslipStatuses)
                            {
                                <div class="col-md-2 col-6 mb-3">
                                    <div class="border rounded p-3">
                                        <h3 class="mb-2 text-@status.StatusColor">@status.Count</h3>
                                        <h6 class="mb-0 small">@status.Status</h6>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-chart-pie fa-2x mb-2"></i>
                            <p>No payslip data available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public HRDashboardDto Data { get; set; } = new();

    private string GetPriorityColor(string priority)
    {
        return priority?.ToLower() switch
        {
            "high" => "danger",
            "medium" => "warning",
            "low" => "success",
            _ => "secondary"
        };
    }

    private async Task ShowAddEmployeeModal()
    {
        await JSRuntime.InvokeVoidAsync("alert", "Add Employee functionality - redirecting to employee creation...");
        Navigation.NavigateTo("/employees/create");
    }

    private async Task ShowGeneratePayslipModal()
    {
        await JSRuntime.InvokeVoidAsync("alert", "Generate Payslip functionality - this would open a payslip generation modal...");
    }
}