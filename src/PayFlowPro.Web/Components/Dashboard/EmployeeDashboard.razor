@using PayFlowPro.Shared.DTOs.Dashboard
@inject IJSRuntime JSRuntime
@inject NavigationManager Navigation

<div class="employee-dashboard">
    <!-- Employee Header -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="alert alert-success">
                <div class="d-flex justify-content-between align-items-center">
                    <div>
                        <h4 class="alert-heading mb-1">
                            <i class="fas fa-user me-2"></i>Welcome Back
                        </h4>
                        <p class="mb-0">Welcome back, <strong>@Data.UserName</strong> (@Data.EmployeeCode)</p>
                        <small class="text-muted">@Data.JobTitle • @Data.DepartmentName • Last login: @Data.LastLoginAt.ToString("MMM dd, yyyy 'at' HH:mm")</small>
                    </div>
                    <div class="text-end">
                        <span class="badge bg-success fs-6">@Data.Role</span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Personal Finance Cards -->
    <div class="row mb-4">
        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-gradient-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Current Salary</div>
                            <h2 class="mb-0">@Data.CurrentSalary.ToString("C0")</h2>
                            <div class="small">
                                <span class="text-white-75">per month</span>
                            </div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-dollar-sign fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-gradient-success text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">YTD Earnings</div>
                            <h2 class="mb-0">@Data.YearToDateEarnings.ToString("C0")</h2>
                            <div class="small">
                                <span class="text-white-75">@DateTime.Now.Year earnings</span>
                            </div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-chart-line fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-gradient-info text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Next Pay Date</div>
                            <h2 class="mb-0">@(Data.NextPayDate?.ToString("dd"))</h2>
                            <div class="small">
                                <span class="text-white-75">@(Data.NextPayDate?.ToString("MMM yyyy"))</span>
                            </div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-calendar-alt fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-lg-3 col-md-6 mb-3">
            <div class="card bg-gradient-warning text-white h-100">
                <div class="card-body">
                    <div class="d-flex justify-content-between">
                        <div>
                            <div class="text-white-75 small">Total Payslips</div>
                            <h2 class="mb-0">@Data.TotalPayslips</h2>
                            <div class="small">
                                <span class="text-white-75">generated</span>
                            </div>
                        </div>
                        <div class="align-self-center">
                            <i class="fas fa-file-invoice fa-2x text-white-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Personal Actions -->
    <div class="row mb-4">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">
                        <i class="fas fa-user-edit me-2"></i>Personal Actions
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row g-3">
                        <div class="col-lg-2 col-md-4 col-6">
                            <a href="/payslips/my" class="btn btn-outline-primary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-file-invoice fa-2x mb-2"></i>
                                <span>My Payslips</span>
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <a href="/profile" class="btn btn-outline-success w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-user-edit fa-2x mb-2"></i>
                                <span>Update Profile</span>
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <a href="/Account/Manage" class="btn btn-outline-info w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-lock fa-2x mb-2"></i>
                                <span>Change Password</span>
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <button class="btn btn-outline-warning w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3" @onclick="ShowContactInfo">
                                <i class="fas fa-address-card fa-2x mb-2"></i>
                                <span>Contact Info</span>
                            </button>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <a href="/salary-history" class="btn btn-outline-secondary w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3">
                                <i class="fas fa-chart-line fa-2x mb-2"></i>
                                <span>Salary History</span>
                            </a>
                        </div>
                        <div class="col-lg-2 col-md-4 col-6">
                            <button class="btn btn-outline-dark w-100 h-100 d-flex flex-column align-items-center justify-content-center p-3" @onclick="ContactHR">
                                <i class="fas fa-headset fa-2x mb-2"></i>
                                <span>Contact HR</span>
                            </button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Employment Information and Recent Payslips -->
    <div class="row mb-4">
        <!-- Employment Information -->
        <div class="col-lg-4 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-id-badge me-2"></i>Employment Information
                    </h6>
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <small class="text-muted">Employee Code</small>
                        <div class="fw-bold">@Data.EmployeeCode</div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Position</small>
                        <div class="fw-bold">@Data.JobTitle</div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Department</small>
                        <div class="fw-bold">@Data.DepartmentName</div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Manager</small>
                        <div class="fw-bold">@Data.ManagerName</div>
                    </div>
                    <div class="mb-3">
                        <small class="text-muted">Date of Joining</small>
                        <div class="fw-bold">@Data.DateOfJoining.ToString("MMM dd, yyyy")</div>
                    </div>
                    <div class="mb-0">
                        <small class="text-muted">Years of Service</small>
                        <div class="fw-bold">@Data.PersonalStats.YearsOfService years, @(Data.PersonalStats.MonthsOfService % 12) months</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Payslips -->
        <div class="col-lg-8 mb-4">
            <div class="card h-100">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h6 class="mb-0">
                        <i class="fas fa-receipt me-2"></i>Recent Payslips
                    </h6>
                    <a href="/payslips/my" class="btn btn-sm btn-outline-primary">View All</a>
                </div>
                <div class="card-body">
                    @if (Data.RecentPayslips.Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-sm table-hover">
                                <thead class="table-light">
                                    <tr>
                                        <th>Period</th>
                                        <th>Gross</th>
                                        <th>Net</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var payslip in Data.RecentPayslips.Take(5))
                                    {
                                        <tr>
                                            <td>@payslip.Period</td>
                                            <td>@payslip.GrossSalary.ToString("C")</td>
                                            <td class="fw-bold">@payslip.NetSalary.ToString("C")</td>
                                            <td>
                                                <span class="badge bg-@GetStatusColor(payslip.Status)">@payslip.Status</span>
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm">
                                                    <a href="/payslips/@payslip.PayslipId" class="btn btn-outline-primary btn-sm" title="View">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <button class="btn btn-outline-success btn-sm" @onclick="() => DownloadPayslip(payslip.PayslipId)" title="Download">
                                                        <i class="fas fa-download"></i>
                                                    </button>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-receipt fa-2x mb-2"></i>
                            <p>No payslips available</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>

    <!-- Career Milestones and Personal Statistics -->
    <div class="row">
        <!-- Career Milestones -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-trophy me-2"></i>Career Milestones
                    </h6>
                </div>
                <div class="card-body">
                    @if (Data.CareerMilestones.Any())
                    {
                        <div class="timeline">
                            @foreach (var milestone in Data.CareerMilestones)
                            {
                                <div class="timeline-item mb-3">
                                    <div class="d-flex">
                                        <div class="flex-shrink-0">
                                            <span class="badge bg-primary rounded-pill">
                                                <i class="@milestone.Icon"></i>
                                            </span>
                                        </div>
                                        <div class="flex-grow-1 ms-3">
                                            <h6 class="mb-1">@milestone.Title</h6>
                                            <p class="text-muted small mb-1">@milestone.Description</p>
                                            <small class="text-muted">@milestone.Date.ToString("MMM dd, yyyy")</small>
                                        </div>
                                    </div>
                                </div>
                            }
                        </div>
                    }
                    else
                    {
                        <div class="text-center text-muted py-4">
                            <i class="fas fa-trophy fa-2x mb-2"></i>
                            <p>No milestones recorded</p>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Personal Statistics -->
        <div class="col-lg-6 mb-4">
            <div class="card h-100">
                <div class="card-header">
                    <h6 class="mb-0">
                        <i class="fas fa-chart-pie me-2"></i>Personal Statistics
                    </h6>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col-6 mb-4">
                            <div class="border-end">
                                <h4 class="mb-0 text-primary">@Data.PersonalStats.YearsOfService</h4>
                                <small class="text-muted">Years of Service</small>
                            </div>
                        </div>
                        <div class="col-6 mb-4">
                            <h4 class="mb-0 text-success">@Data.PersonalStats.SalaryGrowthPercentage.ToString("F1")%</h4>
                            <small class="text-muted">Salary Growth</small>
                        </div>
                        <div class="col-6">
                            <div class="border-end">
                                <h4 class="mb-0 text-info">@Data.PersonalStats.TotalPayslipsGenerated</h4>
                                <small class="text-muted">Total Payslips</small>
                            </div>
                        </div>
                        <div class="col-6">
                            <h4 class="mb-0 text-warning">@Data.PersonalStats.LastSalaryUpdate.ToString("MMM yyyy")</h4>
                            <small class="text-muted">Last Update</small>
                        </div>
                    </div>

                    <hr class="my-3">

                    <div class="text-center">
                        <p class="mb-2"><strong>Career Progress</strong></p>
                        <div class="progress mb-2" style="height: 10px;">
                            <div class="progress-bar bg-success" style="width: @(Math.Min((Data.PersonalStats.YearsOfService * 10), 100))%"></div>
                        </div>
                        <small class="text-muted">Experience Level: @GetExperienceLevel(Data.PersonalStats.YearsOfService)</small>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter] public EmployeeDashboardDto Data { get; set; } = new();

    private string GetStatusColor(string status)
    {
        return status?.ToLower() switch
        {
            "paid" => "success",
            "approved" => "info",
            "generated" => "warning",
            "draft" => "secondary",
            "sent" => "primary",
            _ => "secondary"
        };
    }

    private string GetExperienceLevel(int years)
    {
        if (years < 2) return "Junior";
        if (years < 5) return "Mid-Level";
        if (years < 10) return "Senior";
        return "Expert";
    }



    private async Task ShowContactInfo()
    {
        await JSRuntime.InvokeVoidAsync("alert", "Contact Information management coming soon!");
    }

    private async Task ShowSalaryHistory()
    {
        await JSRuntime.InvokeVoidAsync("alert", "Salary History view coming soon!");
    }

    private async Task ContactHR()
    {
        await JSRuntime.InvokeVoidAsync("alert", "Contact HR: hr@democompany.com or call extension 1234");
    }

    private async Task DownloadPayslip(int payslipId)
    {
        // This would trigger a PDF download
        Navigation.NavigateTo($"/api/payslips/{payslipId}/download");
    }
}